<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:padding="5dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content">


        <TextView
                android:id="@+id/measurement_name"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:text="My 1st Measurement"
                android:textColor="@color/orange"
                android:textSize="20dp"
                android:layout_gravity="left"/>

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                      android:orientation="horizontal"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content">

            <TextView
                    android:id="@+id/measurement_date"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="16.11.2013 12:39 pm"
                    android:textColor="@android:color/tertiary_text_light"
                    android:layout_gravity="left"/>

            <TextView
                    android:id="@+id/measurement_sensor"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:text="R2D2"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="left"
                    android:textColor="@android:color/tertiary_text_light" />
            <TextView
                    android:id="@+id/measurement_id"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:visibility="gone"
                    android:text="id1111"

                    android:layout_gravity="left"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_height="fill_parent"
                  android:gravity="right">

        <ImageView
                android:id="@+id/measurement_percentage_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                />

        <ImageView
                android:id="@+id/measurement_status_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="right|center_vertical"
                />
    </LinearLayout>


</LinearLayout>