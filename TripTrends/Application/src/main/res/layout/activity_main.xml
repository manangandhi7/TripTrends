<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@android:color/white">
    <EditText android:id = "@+id/city_name"
              android:layout_height="wrap_content"
              android:layout_width="match_parent"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="20dp"
              android:layout_marginRight="20dp"
              android:text="@string/enter_city"
              android:textColor="@color/Black"
              android:editable="true"
            />
       <RelativeLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content">

    <TextView
            android:id="@+id/class1"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/class1"
            android:background="@android:color/holo_orange_light"
            android:textSize="30dp"
            android:textColor="@color/White"
            android:onClick="onClick"
            android:layout_alignParentLeft="true"
            android:textAlignment="center"
            android:gravity="center"
            android:clickable="true"/>

           <TextView
                   android:id="@+id/class2"
                   android:layout_marginTop="20dp"
                   android:layout_width="150dp"
                   android:layout_height="55dp"
                   android:layout_marginRight="20dp"
                   android:text="@string/class2"
                   android:background="@android:color/holo_orange_light"
                   android:textSize="30dp"
                   android:textColor="@color/White"
                   android:onClick="onClick"
                   android:textAlignment="center"
                   android:layout_alignParentRight="true"
                   android:gravity="center"
                   android:clickable="true"/>

       </RelativeLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
    <TextView
            android:id="@+id/class3"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:text="@string/class3"
            android:background="@android:color/holo_orange_light"
            android:textSize="28dp"
            android:textColor="@color/White"
            android:textAlignment="center"
            android:onClick="onClick"
            android:gravity="center"
            android:layout_alignParentLeft="true"
            android:clickable="true"/>

    <TextView
            android:id="@+id/class4"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginRight="20dp"
            android:text="@string/class4"
            android:textAlignment="center"
            android:gravity="center"
            android:background="@android:color/holo_orange_light"
            android:textSize="28dp"
            android:textColor="@color/White"
            android:onClick="onClick"
            android:layout_alignParentRight="true"
            android:clickable="true"/>
    </RelativeLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/class5"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/class5"
                android:background="@android:color/holo_orange_light"
                android:textSize="30dp"
                android:textColor="@color/White"
                android:textAlignment="center"
                android:onClick="onClick"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:clickable="true"/>

        <TextView
                android:id="@+id/class6"
                android:layout_marginTop="20dp"
                android:layout_width="150dp"
                android:layout_height="55dp"
                android:layout_marginRight="20dp"
                android:text="@string/class6"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@android:color/holo_orange_light"
                android:textSize="30dp"
                android:textColor="@color/White"
                android:onClick="onClick"
                android:layout_alignParentRight="true"
                android:clickable="true"/>
    </RelativeLayout>
    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/days_textview"
                android:layout_marginTop="20dp"
                android:layout_width="100dp"
                android:layout_height="55dp"
                android:layout_marginLeft="20dp"
                android:text="@string/enter_days"
                android:textAlignment="center"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="@color/Black"
                android:onClick="onClick"
                android:layout_alignParentLeft="true"
                android:clickable="true"/>

        <EditText android:id = "@+id/days_to_visit_edittext"
                  android:layout_height="wrap_content"
                  android:layout_width="40dp"
                  android:layout_marginTop="20dp"
                  android:layout_marginLeft="20dp"
                  android:text="3"
                  android:textColor="@color/Black"
                  android:editable="true"
                  android:inputType="number"
                />
        <!--TextView
                android:id="@+id/plus_minus_text"
                android:layout_marginTop="20dp"
                android:layout_width="30dp"
                android:layout_height="55dp"
                android:layout_marginLeft="0dp"
                android:text="@string/plus_minus"
                android:textAlignment="center"
                android:gravity="left"
                android:textSize="20dp"
                android:textColor="@color/Black"
                /-->
        <!--NumberPicker
                android:id="@+id/numberPicker1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:solidColor="@color/gray"-->

    </LinearLayout>
    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent">
        <Button
                android:id="@+id/search_button"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="0dp"
                android:layout_centerInParent="true"
                android:textSize="30dp"
                android:textAlignment="center"
                android:gravity="center"
                android:onClick="onClick"
                android:clickable="true"
                android:layout_centerHorizontal="true"
                android:text="@string/search" />
    </RelativeLayout>
</LinearLayout>